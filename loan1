                }
            },
            colors: ['#2ecc71', '#3498db', '#e74c3c', '#f39c12'],
            tooltip: {
                y: {
                    formatter: function(val) {
                        return val + " loans"
                    }
                }
            }
        };

        var trendChart = new ApexCharts(document.querySelector("#trendChart"), trendOptions);
        trendChart.render();

        // Sanction Chart (using ApexCharts)
        var sanctionOptions = {
