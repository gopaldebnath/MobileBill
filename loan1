        // Week 1 Charts (using Chart.js)
        function renderWeekCharts() {
            // Week 1 SHG Chart
            const week1ShgCtx = document.getElementById('week1ShgChart').getContext('2d');
            new Chart(week1ShgCtx, {
                type: 'bar',
                data: {
                    labels: ['Aug 1', 'Aug 2', 'Aug 3', 'Aug 4', 'Aug 5', 'Aug 6', 'Aug 7'],
                    datasets: [{
                        label: 'Submitted',
                        data: [110, 115, 120, 118, 125, 122, 130],
                        backgroundColor: '#2ecc71'
                    }, {
                        label: 'Sanctioned',
                        data: [35, 38, 40, 42, 45, 43, 48],
                        backgroundColor: '#3498db'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            stacked: true,
                        },
                        y: {
                            stacked: true,
                            beginAtZero: true
                        }
                    }
                }
            });

            // Week 1 Individual Chart
            const week1IndivCtx = document.getElementById('week1IndivChart').getContext('2d');
            new Chart(week1IndivCtx, {
                type: 'bar',
                data: {
                    labels: ['Aug 1', 'Aug 2', 'Aug 3', 'Aug 4', 'Aug 5', 'Aug 6', 'Aug 7'],
                    datasets: [{
                        label: 'Submitted',
                        data: [140, 145, 150, 148, 158, 155, 165],
                        backgroundColor: '#e74c3c'
                    }, {
                        label: 'Sanctioned',
                        data: [45, 48, 50, 52, 55, 53, 58],
                        backgroundColor: '#f39c12'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            stacked: true,
                        },
                        y: {
                            stacked: true,
                            beginAtZero: true
                        }
                    }
                }
            });

            // Similar charts can be created for other weeks
            // For demo purposes, we'll just duplicate the data for other weeks
            const weeks = ['week2', 'week3', 'week4'];
            weeks.forEach(week => {
                // SHG Charts
                const shgCtx = document.getElementById(`${week}ShgChart`).getContext('2d');
                new Chart(shgCtx, {
                    type: 'bar',
                    data: {
                        labels: week === 'week2' ? ['Aug 8', 'Aug 9', 'Aug 10', 'Aug 11', 'Aug 12', 'Aug 13', 'Aug 14'] :
                              week === 'week3' ? ['Aug 15', 'Aug 16', 'Aug 17', 'Aug 18', 'Aug 19', 'Aug 20', 'Aug 21'] :
                              ['Aug 22', 'Aug 23', 'Aug 24', 'Aug 25', 'Aug 26', 'Aug 27', 'Aug 28'],
                        datasets: [{
                            label: 'Submitted',
                            data: [110, 115, 120, 118, 125, 122, 130].map(x => x + Math.floor(Math.random() * 20)),
                            backgroundColor: '#2ecc71'
                        }, {
                            label: 'Sanctioned',
                            data: [35, 38, 40, 42, 45, 43, 48].map(x => x + Math.floor(Math.random() * 10)),
                            backgroundColor: '#3498db'
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                stacked: true,
                            },
                            y: {
                                stacked: true,
                                beginAtZero: true
                            }
                        }
                    }
                });

                // Individual Charts
                const indivCtx = document.getElementById(`${week}IndivChart`).getContext('2d');
                new Chart(indivCtx, {
                    type: 'bar',
                    data: {
                        labels: week === 'week2' ? ['Aug 8', 'Aug 9', 'Aug 10', 'Aug 11', 'Aug 12', 'Aug 13', 'Aug 14'] :
                              week === 'week3' ? ['Aug 15', 'Aug 16', 'Aug 17', 'Aug 18', 'Aug 19', 'Aug 20', 'Aug 21'] :
                              ['Aug 22', 'Aug 23', 'Aug 24', 'Aug 25', 'Aug 26', 'Aug 27', 'Aug 28'],
                        datasets: [{
                            label: 'Submitted',
                            data: [140, 145, 150, 148, 158, 155, 165].map(x => x + Math.floor(Math.random() * 20)),
                            backgroundColor: '#e74c3c'
                        }, {
                            label: 'Sanctioned',
                            data: [45, 48, 50, 52, 55, 53, 58].map(x => x + Math.floor(Math.random() * 10)),
                            backgroundColor: '#f39c12'
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                stacked: true,
                            },
                            y: {
                                stacked: true,
                                beginAtZero: true
                            }
                        }
                    }
                });
            });
        }

        // Toggle between count and amount charts
        document.querySelectorAll('[data-chart-type]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-chart-type]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                if (this.dataset.chartType === 'amount') {
                    trendChart.updateOptions({
                        title: {
                            text: 'Daily Loan Amount Trends'
                        },
                        yaxis: {
                            title: {
                                text: 'Loan Amount (₹ Lakhs)'
                            }
                        },
                        series: [{
                            name: 'SHG Amount Submitted',
                            data: [52, 55, 58, 60, 62, 65, 68]
                        }, {
                            name: 'SHG Amount Sanctioned',
                            data: [18, 20, 22, 24, 25, 26, 28]
                        }, {
                            name: 'Indiv. Amount Submitted',
                            data: [75, 78, 80, 82, 85, 88, 90]
                        }, {
                            name: 'Indiv. Amount Sanctioned',
                            data: [25, 28, 30, 32, 35, 38, 40]
                        }],
                        tooltip: {
                            y: {
                                formatter: function(val) {
                                    return '₹' + val + ' Lakhs'
                                }
                            }
                        }
                    });
                } else {
                    trendChart.updateOptions(trendOptions);
                }
            });
        });

        // Initialize all charts when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            renderWeekCharts();
        });
    </script>
</body>
</html>
