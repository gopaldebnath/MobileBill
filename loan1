    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // District-Block data
        const districtBlocks = {
            "NORTH TRIPURA": ["Dasda", "Laljuri", "JampuiHill", "Kadamtala", "Kalacharra", "JubarajNagar", "Panisagar", "Damcharra"],
            "UNAKOTI": ["GourNagar", "Chandipur", "Kumarghat", "Pechartal"],
            "DHALAI": ["Salema", "Durgachowmuhani", "Chawmanu", "Manu", "Dumburnagar", "Raishyabari", "Ambassa", "Ganganagar"],
            "KHOWAI": ["Khowai", "Padmabill", "Tulashikhar", "Mungiakami", "Teliamura", "Kalyanpur"],
            "WEST TRIPURA": ["Dukli", "Mohanpur", "Bamutia", "Hezamara", "Lefunga", "OldAgartala", "Belbari", "Jirania", "Mandai"],
            "SEPAHIJALA": ["Bishalghar", "Charilam", "Boxanagar", "Kathalia", "Nalchar", "Mohanbhog", "Jampuijala"],
            "GOMATI": ["Killa", "Matabari", "Tepania", "Kakraban", "Amarpur", "Ompi", "Karbook", "Silachari"],
            "SOUTH TRIPURA": ["Satchand", "Poangbari", "Rupaichari", "Rajnagar", "Bharatchandranagar", "Hrishamukh", "Bokafa", "Jolaibari"]
        };

        // Populate block dropdown based on district selection
        document.getElementById('districtSelect').addEventListener('change', function() {
            const district = this.value;
            const blockSelect = document.getElementById('blockSelect');
            
            blockSelect.innerHTML = '<option value="all">All Blocks</option>';
            
            if (district !== 'all') {
                blockSelect.disabled = false;
                districtBlocks[district].forEach(block => {
                    const option = document.createElement('option');
                    option.value = block;
                    option.textContent = block;
                    blockSelect.appendChild(option);
                });
            } else {
                blockSelect.disabled = true;
            }
        });

        // Trend Chart (using ApexCharts)
        var trendOptions = {
            series: [{
                name: 'SHG Loans Submitted',
                data: [120, 115, 125, 130, 128, 135, 140]
            }, {
                name: 'SHG Loans Sanctioned',
                data: [40, 42, 45, 48, 50, 52, 55]
            }, {
                name: 'Individual Loans Submitted',
